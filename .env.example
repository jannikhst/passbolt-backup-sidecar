# Passbolt Backup Sidecar Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_USER=passbolt
MYSQL_PASSWORD=your_secure_passbolt_db_password
MYSQL_DATABASE=passbolt

# Passbolt Configuration
APP_FULL_BASE_URL=https://your-passbolt-domain.com

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Optional: HTTP Endpoint for Remote Backup
# HTTP_ENDPOINT=https://your-backup-server.com/api/backups
# ENCRYPTION_KEY=your_encryption_key_for_remote_backups

# Example HTTP endpoint configuration:
# If you want to send backups to a remote server, uncomment and configure:
# HTTP_ENDPOINT=https://backup.example.com/api/v1/passbolt-backups
# ENCRYPTION_KEY=MySecureEncryptionKey123!
